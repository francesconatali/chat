{
  "name": "francesco-node-chat",
  "version": "1.0.0",
  "description": "Real-time chat using Node.js. Express, Socket.IO",
  "main": "server.js",
  "scripts": {
    "sass-watch": "sass --no-source-map --watch styles/main.scss public/css/main.css --style compressed",
    "nodemon-watch": "nodemon server.js -e .js",
    "dev": "npm-run-all --parallel sass-watch nodemon-watch",
    "prefix:css": "postcss public/css/main.css --no-map --use autoprefixer -o public/css/main.css"
  },
  "keywords": [
    "node",
    "heroku"
  ],
  "author": "francesco-natali",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "express": "^4.17.3",
    "sass": "^1.53.0",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0"
  }
}
